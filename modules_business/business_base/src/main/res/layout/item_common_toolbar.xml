<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="?attr/actionBarSize"
    android:background="@color/primary"
    android:gravity="center_vertical"
    android:id="@+id/layout_in_toolbar">

    <ImageView
        android:id="@+id/iv_left_toolbar"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:paddingLeft="@dimen/px_20"
        android:paddingStart="@dimen/px_20"
        android:paddingRight="@dimen/px_30"
        android:paddingEnd="@dimen/px_30"
        app:srcCompat="@drawable/vc_ic_back"
        style="@style/tool_bar_click_effect"/>

    <TextView
        android:id="@+id/tv_title_toolbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginLeft="@dimen/px_80"
        android:layout_marginRight="@dimen/px_80"
        android:ellipsize="end"
        android:gravity="center"
        android:maxLines="1"
        android:text="@string/app_name"
        android:textColor="@color/bar_title_color"
        android:textSize="@dimen/px_text_34" />

    <ImageView
        android:id="@+id/iv_right_toolbar_2"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:paddingLeft="@dimen/px_20"
        android:paddingRight="@dimen/px_20"
        style="@style/tool_bar_click_effect"/>

    <TextView
        android:id="@+id/tv_right_toolbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:paddingBottom="@dimen/px_15"
        android:paddingLeft="@dimen/px_30"
        android:paddingRight="@dimen/px_30"
        android:paddingTop="@dimen/px_15"
        android:textColor="@color/bar_title_color"
        android:textSize="@dimen/px_text_34" />
</RelativeLayout>
