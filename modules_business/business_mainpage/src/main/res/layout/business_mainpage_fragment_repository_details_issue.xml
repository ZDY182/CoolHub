<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.m4coding.coolhub.widgets.powerfullayout.PowerfulFrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/business_mainpage_repo_issue_top_card"
        app:power_bottomDividerHeight="@dimen/px_3"
        app:power_bottomDividerColor="@color/indicator_line_color"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/business_mainpage_repo_issue_viewpager">
        <net.lucode.hackware.magicindicator.MagicIndicator
            android:layout_width="match_parent"
            android:layout_height="@dimen/px_80"
            android:background="@color/white"
            android:id="@+id/business_mainpage_repo_issue_top_indicator"/>
    </com.m4coding.coolhub.widgets.powerfullayout.PowerfulFrameLayout>
    <View
        android:layout_width="@dimen/px_3"
        android:layout_height="@dimen/px_80"
        android:background="@color/indicator_line_color"
        app:layout_constraintTop_toTopOf="@id/business_mainpage_repo_issue_top_card"
        app:layout_constraintStart_toStartOf="@id/business_mainpage_repo_issue_top_card"
        app:layout_constraintBottom_toBottomOf="@id/business_mainpage_repo_issue_top_card"
        app:layout_constraintEnd_toEndOf="@id/business_mainpage_repo_issue_top_card"/>
    <android.support.v4.view.ViewPager
        android:id="@+id/business_mainpage_repo_issue_viewpager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintVertical_weight="1"
        app:layout_constraintTop_toBottomOf="@id/business_mainpage_repo_issue_top_card"
        app:layout_constraintBottom_toBottomOf="parent"/>
</android.support.constraint.ConstraintLayout>