<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/px_10"
    android:layout_marginRight="@dimen/px_10"
    android:foreground="@drawable/selector_click_effect"
    app:cardCornerRadius="@dimen/px_12"
    app:cardElevation="@dimen/px_3"
    app:cardUseCompatPadding="true">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/px_20">

        <TextView
            android:id="@+id/business_mainpage_hot_tv_repo_name"
            android:layout_width="@dimen/px_550"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:singleLine="true"
            android:textStyle="bold"
            android:textColor="@color/primary_text"
            android:textSize="@dimen/px_text_30"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx" />

        <TextView
            android:id="@+id/business_mainpage_hot_tv_describe"
            android:layout_width="@dimen/px_600"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/px_15"
            android:ellipsize="end"
            android:maxLines="3"
            android:textColor="@color/secondary_text"
            android:textSize="@dimen/px_text_25"
            app:layout_constraintStart_toStartOf="@+id/business_mainpage_hot_tv_repo_name"
            app:layout_constraintTop_toBottomOf="@+id/business_mainpage_hot_tv_repo_name"
            tools:text="xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx" />

        <TextView
            android:id="@+id/business_mainpage_hot_tv_language"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/px_10"
            android:drawableLeft="@drawable/shape_language_mark"
            android:drawablePadding="@dimen/px_6"
            android:textSize="@dimen/px_text_25"
            android:gravity="center"
            android:textColor="@color/secondary_text"
            android:visibility="visible"
            app:layout_constraintStart_toStartOf="@id/business_mainpage_hot_tv_describe"
            app:layout_constraintTop_toBottomOf="@id/business_mainpage_hot_tv_describe"
            tools:text="java" />

        <TextView
            android:id="@+id/business_mainpage_hot_tv_star"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/px_25"
            android:layout_marginTop="@dimen/px_10"
            android:drawableLeft="@drawable/compat_vc_ic_star"
            android:drawablePadding="@dimen/px_5"
            android:textSize="@dimen/px_text_25"
            android:gravity="center"
            android:textColor="@color/secondary_text"
            app:layout_constraintStart_toEndOf="@id/business_mainpage_hot_tv_language"
            app:layout_constraintTop_toBottomOf="@id/business_mainpage_hot_tv_describe"
            app:layout_goneMarginStart="0dp"
            tools:text="200000" />

        <TextView
            android:id="@+id/business_mainpage_hot_tv_star_in_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/px_25"
            android:layout_marginTop="@dimen/px_10"
            android:drawableLeft="@drawable/compat_vc_ic_star"
            android:drawablePadding="@dimen/px_5"
            android:textSize="@dimen/px_text_25"
            android:gravity="center"
            android:textColor="@color/secondary_text"
            app:layout_constraintStart_toEndOf="@id/business_mainpage_hot_tv_star"
            app:layout_constraintTop_toBottomOf="@id/business_mainpage_hot_tv_describe"
            app:layout_goneMarginStart="0dp"
            tools:text="200星标今天" />
    </android.support.constraint.ConstraintLayout>
</android.support.v7.widget.CardView>