<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.m4coding.coolhub.widgets.CustomViewPager
        android:id="@+id/business_mainpage_viewpager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintVertical_weight="1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/business_mainpage_bottom_card" />
    <com.m4coding.coolhub.widgets.powerfullayout.PowerfulFrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/business_mainpage_bottom_card"
        android:background="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:power_topDividerHeight="@dimen/px_3"
        app:power_topDividerColor="@color/indicator_line_color">
        <net.lucode.hackware.magicindicator.MagicIndicator
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/business_mainpage_bottom_indicator"/>
    </com.m4coding.coolhub.widgets.powerfullayout.PowerfulFrameLayout>
</android.support.constraint.ConstraintLayout>