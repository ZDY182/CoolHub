<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <ImageView
        android:id="@+id/business_start_iv_icon"
        android:layout_width="@dimen/px_170"
        android:layout_height="@dimen/px_170"
        app:srcCompat="@drawable/ic_launcher"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/business_start_tv_title"
        app:layout_constraintVertical_chainStyle="packed"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/business_start_tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CoolHub"
        android:textColor="@color/common_333333"
        android:textSize="@dimen/px_text_35"
        android:layout_marginTop="@dimen/px_25"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/business_start_iv_icon"
        app:layout_constraintBottom_toTopOf="@+id/business_start_tv_content"/>

    <TextView
        android:id="@+id/business_start_tv_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="懂你的Github代码管理中心"
        android:textColor="@color/common_333333"
        android:textSize="@dimen/px_text_22"
        android:layout_marginTop="@dimen/px_10"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/business_start_tv_title"
        app:layout_constraintBottom_toBottomOf="parent"/>
</android.support.constraint.ConstraintLayout>